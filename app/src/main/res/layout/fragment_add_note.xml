<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddNoteFragment"
    android:background="@drawable/bottomsheetshape">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:id="@+id/bg"
       android:background="@color/black"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <ImageView
          android:id="@+id/btnCancel"
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:layout_marginStart="16dp"
          android:layout_marginTop="32dp"
          android:background="@color/black"
          android:contentDescription="back"
          android:src="@drawable/baseline_arrow_back_ios_new_24"
          app:fabCustomSize="90dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:maxImageSize="40dp" />

      <Button
          android:id="@+id/btn_update"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="27dp"
          android:backgroundTint="@color/white"
          android:text="Save"
          android:textColor="@color/black"
          android:textSize="15sp"
          app:layout_constraintBottom_toBottomOf="@+id/btnCancel"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="@+id/btnCancel"
          app:maxImageSize="40dp" />

      <EditText
          android:id="@+id/title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:hint="Title"

          android:padding="20dp"
          android:textColor="@color/white"
          android:textColorHint="#BFBABA"
          android:textSize="24sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/btnCancel" />

<!--      <TextView-->
<!--          android:id="@+id/date"-->
<!--          android:layout_width="wrap_content"-->
<!--          android:layout_height="wrap_content"-->
<!--          android:text="22 JAN 15:00"-->
<!--          android:textColor="#C5BBBB"-->
<!--          android:textSize="20sp"-->
<!--          app:layout_constraintEnd_toStartOf="@+id/btn_update"-->
<!--          app:layout_constraintStart_toEndOf="@+id/btnCancel"-->
<!--          app:layout_constraintTop_toTopOf="@id/btnCancel" />-->


      <EditText
          android:id="@+id/body"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="Body"
          android:padding="20dp"
          android:layout_margin="5dp"
          android:textColor="@color/white"
          android:textColorHint="#BFBABA"
          android:textSize="20sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/title" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/black"
          android:gravity="center"
          app:layout_constraintTop_toBottomOf="@id/body"
          app:layout_constraintBottom_toBottomOf="parent">

         <androidx.cardview.widget.CardView
             android:id="@+id/bg_blue"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_margin="10dp"
             android:backgroundTint="#a6eaff"
             app:cardCornerRadius="256dp" />

         <androidx.cardview.widget.CardView
             android:id="@+id/bg_pink"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_margin="10dp"
             android:backgroundTint="#f3e09e"
             app:cardCornerRadius="256dp" />

         <androidx.cardview.widget.CardView
             android:id="@+id/bg_green"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_margin="10dp"
             android:backgroundTint="#cdffa6"
             app:cardCornerRadius="256dp" />

         <androidx.cardview.widget.CardView
             android:id="@+id/bg_red"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_margin="10dp"
             android:backgroundTint="#D24545"
             app:cardCornerRadius="256dp" />

         <androidx.cardview.widget.CardView
             android:id="@+id/bg_yellow"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_margin="10dp"
             android:backgroundTint="#f29de0"
             app:cardCornerRadius="206dp" />

         <androidx.cardview.widget.CardView
             android:id="@+id/bg_white"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_margin="10dp"
             android:backgroundTint="#FFFFFF"
             app:cardCornerRadius="206dp" />
      </LinearLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>