    <Button
        android:id="@+id/btnUploadPdf"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:backgroundTint="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:drawableLeft="@drawable/upload"
        android:drawableTint="@color/black"
        android:text="Upload Pdf"
        app:layout_constraintEnd_toEndOf="@+id/pdfFileName"
        app:layout_constraintStart_toStartOf="@+id/pdfFileName"
        app:layout_constraintTop_toBottomOf="@+id/pdfFileName" />

    <Button
        android:id="@+id/btnShowAllPdf"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
    android:backgroundTint="@color/thulian_pink"
        android:text="Show All Pdf"
        app:layout_constraintEnd_toEndOf="@+id/pdfFileName"
        app:layout_constraintStart_toStartOf="@+id/pdfFileName"
        app:layout_constraintTop_toBottomOf="@+id/btnUploadPdf" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnSelectPdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_24"
        app:fabCustomSize="40dp"
        android:layout_margin="20dp"
        android:backgroundTint="#4CAF50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

